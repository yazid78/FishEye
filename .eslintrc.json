{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": "off",
    "semi": "off",
    "block-spacing": "off",
    "brace-style": "off",
    "eol-last": "off",
    "no-unused-vars": "off", // Ignorer les variables non utilisées
    "space-before-function-paren": "off", // Ignorer les espaces avant les parenthèses de fonction
    "indent": "off", // Ignorer les erreurs d'indentation
    "no-multiple-empty-lines": "off", // Ignorer les erreurs de lignes vides multiples
    "no-undef": "off"
  }
}
